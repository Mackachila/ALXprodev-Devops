#!/bin/bash

# Ensure the data file exists
if [ ! -f data.json ]; then
  echo "data.json not found. Please run the API request script first."
  exit 1
fi

# Extract data using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')         # Capitalize name
height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1/10}')  # Convert to meters
weight=$(jq -r '.weight' data.json | awk '{print $1/10}') # Convert to kilograms
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')     # First type, capitalized

# Output the formatted result
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
